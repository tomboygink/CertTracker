{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",                     // откуда брать исходники
    "outDir": "../public",              // корень public
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "config/**/*.ts"                    // компилируем config в public/config
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "./installer_db" },
    { "path": "./server" },
  ]
}
